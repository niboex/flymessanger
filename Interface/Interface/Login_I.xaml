<Window x:Class="Interface.Login_I"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="Login_I" Height="300" Width="300" ResizeMode="NoResize" WindowStyle="None">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid>
    <Image x:Name="image" Height="300" VerticalAlignment="Top" Source="Images\Background.png" RenderTransformOrigin="0.5,0.5"/>

        <Image x:Name="closeenter" Source="Images\closeenter.png" Margin="270,-3,-7,276" />
        <Image x:Name="closeclick" Source="Images\closeclick.png" Margin="273,-6,-5,273" RenderTransformOrigin="0.5,0.5" />
        <Image x:Name="close" Source="Images\close.png" Margin="275,-5,-2,273" MouseLeftButtonDown="close_MouseLeftButtonDown" MouseLeftButtonUp="close_MouseLeftButtonUp" RenderTransformOrigin="0.55,0.5" MouseEnter="close_MouseEnter" MouseLeave="close_MouseLeave"/>
          
    <Image x:Name="ButtonDown" Source= "Images\SignInButtonDown.png" Margin="108,210,107,52" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.056" />
     
    <Image x:Name="Button_click" Source="Images\SignInButtonClick.png" Margin="108,186,107,29" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0" RenderTransformOrigin="0.5,0.5" />

    <Image x:Name="Button" Source="Images\SignInButton.png" Margin="108,210,107,52" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="Button_MouseLeftButtonDown" MouseLeftButtonUp="Button_MouseLeftButtonUp" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" RenderTransformOrigin="0.5,0.5" />

    <TextBox x:Name="Login" HorizontalAlignment="Left" Height="37" Margin="44,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="White" BorderThickness="0" SelectionOpacity="0.5" Text="Логин" FontFamily="Roboto" FontSize="17" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextDecorations="{x:Null}" VerticalScrollBarVisibility="Disabled" CaretBrush="#FFE0E0E0" Foreground="White" MouseEnter="Login_MouseEnter" MouseLeave="Login_MouseLeave" RenderTransformOrigin="0.5,0.5"/>

    <PasswordBox x:Name="Pass" HorizontalAlignment="Left" Margin="44,165,0,0" VerticalAlignment="Top" Width="212" Height="35" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FFE0E0E0" Password="123456" FontSize="17" FontFamily="Roboto" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFE0E0E0" MouseEnter="Pass_MouseEnter" MouseLeave="Pass_MouseLeave" CaretBrush="#FFE0E0E0" BorderThickness="0" SelectionOpacity="0.5" RenderTransformOrigin="0.5,0.5" />

    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="21" Stroke="Black" VerticalAlignment="Top" Width="279" MouseLeftButtonDown="Rectangle_MouseLeftButtonDown" Opacity="0" RenderTransformOrigin="0.5,0.5"/>
    </Grid>
</Window>

